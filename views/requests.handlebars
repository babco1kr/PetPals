

<div id="requestpage">
<div class = "container">
<div class = "row">
<div class = "col s6">
{{#each pets}}
      <div class="card blue-grey lighten-5">
        <div class="card-content black-text">
          <h4>Sitters Name: {{this.requestName}}</h4>
          <span class="card-title">{{this.petName}}</span>
          <div><img class="petimage" src="{{this.pictureLink}}"></div>
          <p>Price: ${{this.price}}/day</p>
          <p>Dates: {{this.startDate}} - {{this.endDate}}</p>
          <button type="submit" data-id="{{this.id}}" class="approve" class="btn btn-light">Approve</button>
          <button type="submit" data-id="{{this.id}}" class="deny" class="btn btn-light">Deny</button>
      </div>
    </div>
  {{/each}}


