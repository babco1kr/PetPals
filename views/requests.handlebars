<div class = "col s3">
    <h5>Your pet Sitters</h5>
    {{#each userPets}}
        <div class = "row">
            <div class = "col s4">
                {{petName}}
            </div>
            <div class = "col s4">
                {{SitterNumber}}
            </div>
            <div class = "col s4">
                <button type = "submit" data-id = "{{id}}" class = "endSit" class="btn btn-light">X</button>
            </div>
        </div>
    {{/each}}
</div>
<div class = "col s3">
    <h5>Pets You are Sitting</h5>
    {{#each userSits}}
        <div class = "row">
            <div class = "col s4">
                {{petName}}
            </div>
            <div class = "col s4">
                {{OwnerPhone}}
            </div>
            <div class = "col s4">
